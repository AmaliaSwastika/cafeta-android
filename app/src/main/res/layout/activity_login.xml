<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFAFA"
    tools:context=".Login">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="413dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="595dp"
        android:src="@drawable/gelombang3"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="-27dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="648dp"
        android:src="@drawable/gelombang4"/>

    <ImageView
        android:id="@+id/img3"
        android:layout_width="110dp"
        android:layout_height="103dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="158dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="526dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="518dp"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/brownDark"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="489dp"
        android:gravity="center"
        android:text="Welcome at Cafeta!"
        android:textColor="@color/brownDark"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtText1"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="355dp"
        android:background="@drawable/edt_background"
        android:drawableLeft="@drawable/ic_baseline_personn_24"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:hint="Input Username"
        android:textColor="@color/grey"/>

    <EditText
        android:id="@+id/edtText2"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="358dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="292dp"
        android:background="@drawable/edt_background"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:hint="Input Password"
        android:textColor="@color/grey"/>

    <View
        android:id="@+id/line1"
        android:layout_width="135dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="340dp"
        android:background="@color/brownDark" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="421dp"
        android:layout_marginEnd="187dp"
        android:layout_marginBottom="264dp"
        android:gravity="center"
        android:text="OR"
        android:textColor="@color/brownDark"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/line2"
        android:layout_width="135dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="339dp"
        android:background="@color/brownDark" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="265dp"
        android:backgroundTint="@color/cream"
        android:drawableLeft="@drawable/googlee"
        android:text="Login With Google"
        android:textColor="@color/brownDark"
        android:onClick="to_mainActivity"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="512dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="264dp"
        android:gravity="center"
        android:text="Don't have a account?"
        android:textColor="@color/brownDark"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="135dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="512dp"
        android:layout_marginEnd="78dp"
        android:gravity="center"
        android:text="Register"
        android:textColor="@color/blue"
        android:textSize="13sp"
        android:textStyle="bold"
        android:onClick="to_register"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="172dp"
        android:backgroundTint="@color/brownDark"
        android:text="Login"
        android:textColor="@color/cream"
        android:onClick="to_mainActivity" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginTop="615dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-44dp"
        android:src="@drawable/gelombang1" />

    <ImageView
        android:id="@+id/img5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="638dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/gelombang2" />
</RelativeLayout>